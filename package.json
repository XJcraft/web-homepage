{
  "name": "xj-bbs",
  "version": "1.0.0",
  "description": "My beautiful Nuxt.js project",
  "author": "jimliang",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "generate": "nuxt generate",
